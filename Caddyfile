{$DOMAIN} {
	# Security headers
	header {
		X-Content-Type-Options nosniff
		X-Frame-Options DENY
		Strict-Transport-Security "max-age=31536000; includeSubDomains"
		-Server
	}

	# Compression
	encode gzip zstd

	# API reverse proxy
	handle /api/* {
		reverse_proxy backend:8080
	}

	# Health check reverse proxy
	handle /health {
		reverse_proxy backend:8080
	}

	# Frontend SPA
	handle {
		root * /srv/frontend
		try_files {path} /index.html
		file_server
	}
}
